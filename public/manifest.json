{
  "manifest_version": 3,
  "version": "0.1.0",
  "short_name": "SS",
  "name": "Sedentary Savior",
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#ccff33",
  "background_color": "#333333",
  "icons": {
    "192": "icon192.png"
  },
  "background": {
    "service_worker": "background.ts"
  },
  "permissions": ["alarms", "notifications", "tabs"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_security_policy": {
    "sandbox": "http://localhost:3000"
  }
}
